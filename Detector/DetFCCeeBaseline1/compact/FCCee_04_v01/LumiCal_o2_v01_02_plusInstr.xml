<lccdd>
    

 <detectors>
   <detector name="LumiCalInstrumentation" type="LumiCal_o2_v02" vis="SeeThrough" id="DetID_LumiCalInstrumentation"  insideTrackingVolume="false" >
     
     <envelope vis="LCALInstrVis">
       <shape type="BooleanShape" operation="union" material="Air">

         <shape type="BooleanShape" operation="Intersection">
           <shape type="Box"  dx="world_side" dy="world_side" dz="world_side"/>
           <shape type="Cone"  rmin1="LumiCal_Instr_Rinn1-env_safety" rmax1="LumiCal_Instr_Rout1+env_safety"  rmin2="LumiCal_Instr_Rinn2-env_safety" rmax2="LumiCal_Instr_Rout2+env_safety" z="88*mm"/>
	   <position x="tan(0.5*abs(CrossingAngle))*(LumiCal_min_z+LumiCal_dz)" y="0" z="LumiCal_min_z+LumiCal_dz"/>
           <rotation x="0" y="0.5*abs(CrossingAngle)" z="0"/>
         </shape>


         <shape type="BooleanShape" operation="Intersection" >
           <shape type="Box"  dx="world_side" dy="world_side" dz="world_side"/>
	   <shape type="Cone"  rmin1="LumiCal_Instr_Rinn2-env_safety" rmax1="LumiCal_Instr_Rout2+env_safety"  rmin2="LumiCal_Instr_Rinn1-env_safety" rmax2="LumiCal_Instr_Rout1+env_safety"  z="88*mm"/>
           <position x="tan(0.5*abs(CrossingAngle))*(LumiCal_min_z+LumiCal_dz)" y="0" z="-(LumiCal_min_z+LumiCal_dz)"/>
           <rotation x="pi" y="pi-0.5*abs(CrossingAngle)" z="0"/>
	 </shape>

       </shape>
     </envelope>
     
     <parameter crossingangle="CrossingAngle" />
     

     
     <dimensions rmin1 = "LumiCal_Instr_Rinn1"
		 rmin2 = "LumiCal_Instr_Rinn2"
		 rmax1 = "LumiCal_Instr_Rout1"
		 rmax2 = "LumiCal_Instr_Rout2"
		 outer_z = "LumiCal_max_z"
		 inner_z = "LumiCal_min_z"/>
            
            
            <layer repeat="40" vis="SeeThrough">
                <slice material = "Silicon" thickness = "4.355*mm" 	sensitive = "no"  vis="SupportVis"/>
            </layer>
            
            
        </detector>
    </detectors>
    
</lccdd>


