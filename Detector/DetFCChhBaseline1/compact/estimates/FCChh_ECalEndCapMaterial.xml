<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <info name="FCC"
        title="A material approximation of the EMCal"
        author="J. Lingemann"
        url="no"
        status="development"
        version="1.0">
    <comment>ECAL end cap material approximation</comment>
  </info>

  <detectors>
    <!-- E N D C A P S -->
    <detector name="ECalExtBarPos" type="SimpleCone" vis="ECalVis">
      <dimensions rmin1="ExtBarCal_rmin1" rmax1="ExtBarCal_rmax1" rmin2="ExtBarCal_rmin2" rmax2="ExtBarCal_rmax2" dz="ExtBarCal_dz" z_offset="ExtBarCal_zOffset" material="EM"/>
    </detector>
    <detector name="ECalExtBarNeg" type="SimpleCone" vis="ECalVis">
      <dimensions rmin2="ExtBarECal_rmin1" rmax2="ExtBarCal_rmax1" rmin1="ExtBarCal_rmin2" rmax1="ExtBarCal_rmax2" dz="ExtBarCal_dz" z_offset="-ExtBarCal_zOffset" material="EM"/>
    </detector>
  </detectors>
</lccdd>
