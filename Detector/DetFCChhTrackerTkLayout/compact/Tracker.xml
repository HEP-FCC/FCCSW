<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema" xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">
    <info name="TkLayoutTracker" title="TkLayoutTracker" author="Z.Drasal" url="http://fcc-tklayout.web.cern.ch/fcc-tklayout" status="optimization" version="FCChh_Option3">
        <comment>The tracker geometry as designed and optimized by tkLayout software - design version: FCChh_Option3</comment>
    </info>
    <readouts>
        <readout name="TrackerBarrelReadout">
            <segmentation type="CartesianGridXZ" grid_size_x="0.005*mm" grid_size_z="0.010*mm"/>
            <id>system:4,layer:5,module:16,component:4,x:-15,z:-15</id>
        </readout>
        <readout name="TrackerEndcapReadout">
            <segmentation type="CartesianGridXZ" grid_size_x="0.005*mm" grid_size_z="0.010*mm"/>
            <id>system:4,posneg:1,disc:5,module:16,component:4,x:-15,z:-15</id>
        </readout>
    </readouts>
    <include ref="Tracker_Definitions.xml" />
    <detectors>
        <detector id="10" name="FCChhInner0" type="DD4hep_SubdetectorAssembly" vis="BlueVisTrans">
            <composite name="InnerBRL_Inner0"/>
        </detector>
        <detector id="11" name="FCChhInner" type="DD4hep_SubdetectorAssembly" vis="BlueVisTrans">
            <composite name="InnerECAPpos"/>
            <composite name="InnerBRL_Inner1"/>
            <composite name="InnerECAPneg"/>
        </detector>
        <detector id="12" name="FCChhOuter" type="DD4hep_SubdetectorAssembly" vis="BlueVisTrans">
            <composite name="OuterECAPpos"/>
            <composite name="OuterBRL"/>
            <composite name="OuterECAPneg"/>
        </detector>
    </detectors>

</lccdd>
